{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    // "rootDir": ".",
    "outDir": "dest",
    "skipLibCheck": true,    
  },
  "include": ["tests", "addresses", "src"],
  "exclude": ["dest", "node_modules", "types"]
}
